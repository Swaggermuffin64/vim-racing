{
  "name": "vim-racing-matchmaking",
  "version": "1.0.0",
  "description": "Matchmaking service for Vim Racing",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "load-test": "tsx scripts/load-test.ts",
    "load-test:local": "MATCHMAKING_URL=ws://localhost:3002 NUM_PLAYERS=10 tsx scripts/load-test.ts",
    "load-test:live": "NUM_PLAYERS=10 tsx scripts/load-test.ts"
  },
  "dependencies": {
    "@hathora/cloud-sdk-typescript": "^2.6.0",
    "async-mutex": "^0.5.0",
    "dotenv": "^17.2.3",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
